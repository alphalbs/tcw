// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing: border-box
  height: inherit

body
  height: 600px
  margin-top: 50px
  background: url(../images/bgblurred.jpg) no-repeat center center fixed
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover

.header-container
  height: 64px
  width: 80%
  margin: auto

.outer-page-container
  height: 100%
  width: 80%
  margin: auto

#game_div
  width: 800px
  margin: auto
  -webkit-box-shadow: 0px 0px 30px -2px rgba(0,0,0,0.75)
  -moz-box-shadow: 0px 0px 30px -2px rgba(0,0,0,0.75)
  box-shadow: 0px 0px 30px -2px rgba(0,0,0,0.75)
